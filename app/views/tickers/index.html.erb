<div class="min-h-screen bg-gray-900 text-gray-100 flex flex-col">
  <header class="p-4 flex items-center justify-between border-b border-gray-800">
    <h1 class="text-2xl font-bold tracking-tight">CryptoScreen</h1>
    <div id="favorites-dropdown" data-controller="favorites">
      <!-- Favorites dropdown populated by Stimulus -->
    </div>
  </header>

  <main class="flex-1 flex flex-col items-center p-4">
    <form id="ticker-form" data-controller="scan" data-action="submit->scan#submit" class="w-full max-w-md flex gap-2 mb-6">
      <input type="text" name="ticker" placeholder="Enter ticker (e.g. BTCUSD, AAPL)" class="flex-1 rounded bg-gray-800 border border-gray-700 px-3 py-2 text-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded">Scan</button>
      <button type="button" data-action="favorites#toggle" class="ml-2 text-yellow-400 text-2xl">☆</button>
    </form>

    <section id="indicator-grid" class="w-full max-w-4xl overflow-x-auto mb-6">
      <%= render(IndicatorGridComponent.new(
        signals: @signals || {},
        timeframes: ["15m", "1h", "2h", "4h", "24h", "48h", "1w", "1mo"],
        indicators: %w[rsi macd ttm_squeeze volume_spike ma_ribbon]
      )) %>
    </section>

    <section id="tradingview-widget" class="w-full max-w-4xl mb-6">
      <!-- TradingView widget will be embedded here -->
    </section>

    <section id="confluence-alerts" class="w-full max-w-2xl mb-4">
      <!-- Confluence badges/alerts -->
    </section>
  </main>

  <footer class="p-4 text-center text-gray-500 text-xs border-t border-gray-800">
    Powered by <a href="https://www.tradingview.com/" class="underline hover:text-blue-400">TradingView</a>, Alpha Vantage, Finnhub, Binance. <span class="ml-2">No data stored.</span>
  </footer>

  <!-- Indicator definition modal -->
  <div id="indicator-modal" class="hidden fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50" data-controller="modal">
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 max-w-lg w-full relative">
      <button class="absolute top-2 right-2 text-gray-400 hover:text-white" data-action="modal#close">✕</button>
      <div id="indicator-definition-content">
        <!-- Populated by AJAX -->
      </div>
    </div>
  </div>
</div>